<div id="signup" class="index listhead">
<h1 style="text-align:center">Sign In</h1>
<form class="createbar" method="POST">
  <label for="input-email">Email</label>
  <input type="email" id="input-email" name="email" placeholder="Your Email" required>
  <label for="input-password">Password</label>
  <input type="password" name="password" id="input-password" placeholder="A Strong Password" required>
  <button><i class="fas fa-user"></i> Sign In</button>
  <a  class="signinanchor" href="/authentication/sign-up"><p style="text-align:center" class="lead">Don't have an account? Sign up!</a></p>
</form>
</div>








 

